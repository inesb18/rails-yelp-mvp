<h2 class="restaurant-name-in-page"><%= @restaurant.name %></h2>

<div class="address">
  <h3>Address</h3>
  <p><%= @restaurant.address %></p>
</div>


<% if @restaurant.phone_number && !@restaurant.phone_number.empty? %>

  <div class="phone-number">
    <h3>Phone number</h3>
    <p><%= @restaurant.phone_number %></p>
  </div>

<% end %>

<div class="reviews">

  <div class="review-list-banner">
    <h3>Reviews</h3>

  </div>

  <% if @restaurant.reviews.empty? %>

    <p>No review yet</p>

  <% else %>

    <div class="review-list">

      <ul>

        <% @restaurant.reviews.each do |review| %>

          <li class="review-card">

            <div class="review-rating">
              <% full_stars = review.rating %>
              <% empty_stars = 5 - full_stars %>
              <% full_stars.times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% empty_stars.times do %>
                <i class="far fa-star"></i>
              <% end %>
            </div>
            <div class="review-content"><%= review.content %></div>

          </li>

        <% end %>

      </ul>

    </div>

  <% end %>

  <h6>Add your review</h6>

  <div class="creation-review-form review-card">
    <%= simple_form_for [@restaurant,@review] do |f| %>
      <div class="rating-stars">
        <%= hidden_field_tag :rating, 0, :id => "rating-input" %>
        <span>Rating<span>
        <i class="far fa-star hidden" id="0"></i>
        <i class="far fa-star" id="1"></i>
        <i class="far fa-star" id="2"></i>
        <i class="far fa-star" id="3"></i>
        <i class="far fa-star" id="4"></i>
        <i class="far fa-star" id="5"></i>
      </div>
      <div class="form-group">
        <%= f.input :content, class: 'form-control' %>
      </div>
      <br>
      <%= f.submit class: 'button' %>
    <% end %>
  </div>



</div>
