<h2 class = "new-restaurant-title">New restaurant</h2>

 <div class="creation-restaurant-form">
  <%= simple_form_for(@restaurant) do |f| %>
    <div class="form-group">
      <%= f.input :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :address, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :phone_number, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :category, as: :select, collection: ["chinese", "italian", "japanese", "french", "belgian"], include_blank: false, input_html: {class: "form-control"} %>
    </div>
    <br>
    <%= f.submit class: 'button' %>
  <% end %>
</div>
