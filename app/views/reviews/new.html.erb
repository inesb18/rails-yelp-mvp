<h2 class = "new-review-title">New review for <%= @restaurant.name %></h2>

<div class="creation-review-form">
  <%= simple_form_for [@restaurant,@review] do |f| %>
    <div class="form-group">
      <%= f.input :content, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.input :rating, as: :select, collection: [0,1,2,3,4,5], include_blank: false, input_html: {class: "form-control"} %>
    </div>
    <br>
    <%= f.submit class: 'button' %>
  <% end %>
</div>
